@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
<br />

<div class="card shadow border-0 mt-4">
	<div class="card-header bg-primary ml-0 py-3">
		<div class="row">
			<div class="col-12 text-center">
				<h2 class="py-2 text-white">Role List</h2>
			</div>
		</div>
	</div>
	<div class="card-body p-4">
		<div class="row pb-3">
			<div class="col-6"></div>
			<div class="col-3 offset-3 text-end">
				<a class="btn btn-outline-primary" asp-controller="Role" asp-action="Upsert">Create Role</a>
			</div>
		</div>
		@if (Model.Count() > 0)
		{
			<table class="table table-bordered table-striped">
				<tr class="table-secondary">
					<th>ID</th>
					<th>Name</th>
					<th></th>
				</tr>
				@foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>
							<a asp-controller="Role" asp-action="Upsert" asp-route-roleId="@item.Id" class="btn btn-primary">Edit</a>
							<a asp-controller="Role" asp-action="Delete" asp-route-roleId="@item.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			</table>
		}
	</div>
</div>